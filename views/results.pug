extends layout


block content
  section#results
    if(searchList.length)
      h3 Results for 
        i '#{searchTerm}'.
      ul  
        each movie in searchList
          if(movie.poster_path && movie.release_date)
            li
              img(src='https://image.tmdb.org/t/p/w200/' + movie.poster_path)
              a(href=`/movie/${movie.title}&${movie.release_date}`)
                p= movie.title
                p= format(movie.release_date)
              button(class='addMovie' value=''+ movie.id) Add Movie
    else 
      h3 No results for
        i '#{searchTerm}'.   
  section#yourList
    h3 Your List of Movies
    if (savedList.length)
      ul
        each movie in savedList
          li
            p #{movie.title} #{format(movie.release_date)}
            button(class='deleteMovie' value=''+ movie.movie_id) Delete Movie 

        button(class='generate')
          a(href='/recommendations') Generate Recommendations

    else
      h6 Your List is Empty  







